extends base
block content
  div.container
    div.row
      h1.display-3 All Product
    div.row
      each product in products
        div.col-md-3.mb-3
          div.card.p-3.shadow-sm
            h3.title #{product.name}
            p.price price: #{product.price} tk
            button(data-id=product._id).btn.btn-success.buyBtn  Buy Now